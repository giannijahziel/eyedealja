= provide(:title, "Press Coverage | Eyedealist")

%header.codrops-header
	= image_tag "press_sm.png"

#pins.transitions-enabled
	- @links.each do |link|
		.col-md-6.text-center
			%h3= link.date

		.col-md-6.left
			%h3
				= link_to link.title, link.url, target: '_blank'

				- if user_signed_in?

					.btn-group
						= link_to "Edit", edit_link_path(link), class: "btn btn-primary"
						= link_to "Delete", link_path(link), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"
