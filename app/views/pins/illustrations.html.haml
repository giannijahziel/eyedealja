= provide(:title, "Eyedealist | Illustrations")

%header.codrops-header
	= image_tag "illustrations_sm.png"

#pins.transitions-enabled

	- @pins.each do |pin|

		.box.panel.panel-default

			= link_to (image_tag pin.image), pin.image.url, "data-lightbox" => "illustrations", "data-title" => "#{pin.title}"

			- if user_signed_in?
				%p.user
					.btn-group
						= link_to "Edit", edit_pin_path(pin), class: "btn btn-default"
						= link_to "Delete", pin_path(pin), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"
