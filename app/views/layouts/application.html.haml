!!! 5
%html{lang: "en"}
%head
	%title= yield(:title)

	%meta{ "http-equiv" => "Content-Type", :content => "text/html; charset=utf-8" }
	%meta{ :content => "Eyedealist", :name => "author" }
	%meta{ :content => "Eyedealist is a Jamaica-based illustrator and mural painter at the vanguard of his generation.", :name => "description" }
	%meta{ :content => "jamaican, illustrator, muralist, eyedealist, painter", :name => "keywords" }
	%meta{ :content => "width=device-width, initial-scale=1.0", :name => "viewport" }
	%meta{ :content => "#FFD700", :name => "theme-color" }

	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags
	

%body
	#perspective.perspective.effect-airbnb
		- if (current_page?(root_url)) && ( @wallpaper )
			.container{:style => "background-image: url(#{request.base_url}#{@wallpaper.image.url}"}
				%p
					%btn.btn.super-button#super-open#showMenu
						%br
						Menu

				.wrapper
					- flash.each do |name, msg|
						= content_tag :div, msg, class: "alert alert-info"
					= yield

			%nav.outer-nav.left.vertical
				= link_to root_path do
					%span.menu-icon.fa.fa-fw.fa-home
						%span.navi-text Home
				= link_to about_path do
					%span.menu-icon.fa.fa-fw.fa-address-book-o
						%span.navi-text About Me
				= link_to pins_murals_path do
					%span.menu-icon.fa.fa-fw.fa-google-wallet
						%span.navi-text Murals
