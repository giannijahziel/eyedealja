= simple_form_for @video, html: { multipart: true } do |f|
	- if @video.errors.any?
		#errors
			%h2
				= pluralize(@video.errors.count, "error")
				prevented this Pin from saving
			%ul
				- @video.errors.full_messages.each do |msg|
					%li= msg

	.form-group
		= f.input :title, input_html: { class: 'form-control' }

	.form-group
		= f.input :link, input_html: { class: 'form-control' }

	.form-group
		= f.label "Choose your image here:-"
		= f.file_field :image, as: :file, input_html: { class: 'form-control' }

	.form-group.btn-group
		= f.submit :submit, class: "btn btn-primary"
		= link_to "Back", :back, class: "btn btn-default"